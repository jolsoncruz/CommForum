{{>jumbotron}}

<div class="row mt-sm-4 mt-md-0">
	<div class="col-sm-12 col-md-8">
    	<div class="card mb-4">
    		<div class="card-header bg-gradient font-weight-bold">
    			RN: {{review.reviewId}}
  			</div>
	      	<div class="card-body border-bottom">
	      		<blockquote class="blockquote">
					<p class="mb-0">{{review.reviewContent}}</p>
					<footer class="blockquote-footer">Submitted by <cite title="Source Title">{{review.studentName}}</cite></footer>
				</blockquote>
	    	</div>
		</div>
		<div class="card mb-4">
			<div class="card-header bg-gradient font-weight-bold" >
	    			Comments
	  		</div>
	  		<div class="card-body border-bottom card-flow">
				<div class="card-body">
					{{#if comment}}
						{{#each comment}}	
						<div class="m-0">
							<p class="mb-0" align="left">{{this.commentContent}}</p>
							<p align="left">-<cite title="Source Title">{{this.studentId}}</cite></p>
						</div>
				    	{{/each}}
					{{else}}
						<p align="center" class="mt-2"><cite title="Source Title">No comments yet</cite></p>
					{{/if}}
				</div>	  
			</div>
		</div>
    </div>

    <div class="col-sm-12 col-md-4">
    	<div class="card mb-4">
    		<div class="card-header bg-gradient font-weight-bold">
    			Post a Comment
  			</div>
	      	<div class="card-body">
		      	<form>
		     	 	<p id="reviewRef" name="reviewRef" hidden>{{review.reviewId}}</p>
		      		<p id="studentRef" name="studentRef" hidden>{{session.studentRef}}</p>
		        	<div class="form-group row">
			            <label for="quickProf" class="col-sm-4 col-form-label">Professor</label>
			            <select class="custom-select col-sm-7" disabled id="profRef">
			              <option selected>{{professor.profName}}</option>
			        	</select>
			        </div>
			        <div class="form-group row">
			            <label for="quickProf" class="col-sm-4 col-form-label">RN</label>
			            <select class="custom-select col-sm-7" disabled id="quickProf">
			              <option selected>{{review.reviewId}}</option>
			        	</select>
			        </div>
		          	<div class="form-group row">
			            <label for="quickRev" class="col-sm-4 col-form-label">Comment</label>
			            <textarea class="form-control col-sm-7" id="commentContent" rows="3"></textarea>
			        </div>
			        <div class="text-center">
			            <button type="submit" id = "addComment" name ="addComment" class="btn btn-primary mt-0 mb-2" disabled>Post Comment</button>
			        </div>
		    	</form>
	    	</div>
		</div>
	</div>
</div>
