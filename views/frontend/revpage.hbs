{{>jumbotron}}

<script>
  window.studentRef = "{{session.studentRef}}";
</script>

<div class="row mt-sm-4 mt-md-0">
	<div class="col-sm-12 col-md-8">
    	<div class="card mb-4">
    		<div class="card-header bg-gradient font-weight-bold">
    			RN: {{review._id}}
  			</div>
	      	<div class="card-body border-bottom">
	      		<blockquote class="blockquote">
					<p class="mb-0">{{review.reviewContent}}</p>
					<footer class="blockquote-footer">Submitted by <cite title="Source Title">{{review.studentRef.studentName}}</cite></footer>
				</blockquote>
	    	</div>
		</div>
		<div class="card mb-4">
			<div class="card-header bg-gradient font-weight-bold" >
	    			Comments
	  		</div>
	  		<div class="card-body border-bottom card-flow">
				<div class="card-body">
					{{#if comment}}
						{{#each comment}}	
						<p class="mb-0" align="left" id="{{this._id}}">{{this.commentContent}}</p>
						<p align="left">-<cite title="Source Title">{{this.studentRef.studentName}}</cite></p>
				    	{{/each}}
					{{else}}
						<p align="center" class="mt-2"><cite title="Source Title">No comments yet</cite></p>
					{{/if}}
				</div>	  
			</div>
		</div>
    </div>

    <div class="col-sm-12 col-md-4">
    	<div class="card mb-4">
    		<div class="card-header bg-gradient font-weight-bold">
    			Post a Comment
  			</div>
	      	<div class="card-body">
		      	<form>
		        	<div class="form-group row">
			            <label for="commProf" class="col-sm-4 col-form-label">Professor</label>
			            <select class="custom-select col-sm-7" disabled id="commProf">
			              <option selected>{{review.profRef.profName}}</option>
			        	</select>
			        </div>
			        <div class="form-group row">
			            <label for="commRN" class="col-sm-4 col-form-label">RN</label>
			            <select class="custom-select col-sm-7" disabled id="commRN">
			              <option selected>{{review._id}}</option>
			        	</select>
			        </div>
		          	<div class="form-group row">
			            <label for="commContent" class="col-sm-4 col-form-label">Comment</label>
			            <textarea id="commContent" class="form-control col-sm-7" rows="3"></textarea>
			        </div>
			        <div class="text-center">
			            <button type="submit" id = "commentBtn" class="btn btn-primary mt-0 mb-2">Post Comment</button>
			        </div>
		    	</form>
		    	<p id="msg" class="text-danger mb-0 mt-2 text-center"></p>
	    	</div>
		</div>
	</div>
</div>