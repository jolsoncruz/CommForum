{{>jumbotron}}

<div class="row mt-sm-4 mt-md-0">
	<div class="col-sm-12 col-md-8">
    	<table class="table table-hover table-light mb-5">
			<thead class="thead-green">
			    <tr>
			       	<th scope="col"></th>
			       	<th scope="col">Review</th>
			       	<th scope="col">Course</th>
			       	<th scope="col">Reviewer</th>
			       	<th scope="col" class="text-center">Action</th>
		    	</tr>
			</thead>
		    <tbody>
			    {{#each reviews}}
					<tr>
				      	<th scope="row"></th>
				  	    <td>
				  	  		<span class="d-inline-block text-truncate" style="max-width: 200px;">{{this.reviewContent}}</span>
				  	    </td>
				      	<td>{{this.profCourse}}</td>
				       	<td>{{this.studentRef.studentName}}</td>
				       	<td class="text-center"><a class="btn btn-primary btn-sm text-white" href="/reviews/{{this._id}}">Go to Review</a></td>
			    	</tr>
		      	{{/each}}
			</tbody>
		</table>
    </div>

    <div class="col-sm-12 col-md-4">
    	<div class="card mb-4">
    		<div class="card-header bg-gradient font-weight-bold">
    			<!-- REPLACE WITH ACTUAL USER ID -->
    			Submit a Quick Review
  			</div>
	      	<div class="card-body">
		      	<form>
		        	<div class="form-group row">
			            <label for="quickProf" class="col-sm-4 col-form-label">Professor</label>
			            <select class="custom-select col-sm-7" disabled id="quickProf">
			              <!-- To be transformed as EACH loop -->
			              <option selected>{{professor.profName}}</option>
			        	</select>
			        </div>
		          	<div class="form-group row">
			            <label for="quickRev" class="col-sm-4 col-form-label">Review</label>
			            <textarea class="form-control col-sm-7" id="exampleFormControlTextarea1" rows="3"></textarea>
			        </div>
			        <div class="text-center">
			            <button type="submit" class="btn btn-primary mt-0 mb-2">Post Review</button>
			        </div>
		    	</form>
	    	</div>
		</div>
	</div>
</div>