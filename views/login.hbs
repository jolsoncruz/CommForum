<img src="/assets/logo_box_green.jpg" class="form-logo" draggable="false" alt="DLSU Community Forum">
<div class="authContainer" id="authContainer">
    <div class="form-container sign-up-container">
        <form id="signUpForm">
                <h1>Create Account</h1>
                <span>Use your ID number for registration</span>
                <input type="text" id="regName" placeholder="Name"/>
                <input type="text" id="regId" pattern="[0-9]{8}" title="Eight digit student ID" placeholder="ID Number"/>
                <input type="password" id="regPass1" placeholder="Password"/>
                <input type="password" id="regPass2" placeholder="Re-type Password"/>
                <button id="signUpBtn" type="submit">Sign Up</button>
            </form>
        </div>
        <div class="form-container sign-in-container">
            <form id="signInForm">
                <h1>Sign In</h1>
                <span>Use your registered account</span>
                <input type="text" id="siId" pattern="[0-9]{8}" title="Eight digit student ID" placeholder="ID Number"/>
                <input type="password" id="siPass" placeholder="Password" />
                <a href="#">Forgot your password?</a>
                <button id="signInBtn" type="submit">Sign In</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Welcome Back!</h1>
                    <p>To access our community forum please login with your personal info</p>
                    <button class="ghost" id="signIn">Sign In</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>Hello, Archer!</h1>
                    <p>Enter your personal info to gain access to the amazing features of our community forum</p>
                    <button class="ghost" id="signUp">Sign Up</button>
                </div>
            </div>
        </div>
    </div>
</div>