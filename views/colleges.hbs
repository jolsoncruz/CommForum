{{>jumbotron}}

{{#if data}}
  <div class="row">
    {{#each data}}
      <div class="col-sm-12 col-md-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <img src="/assets/{{this}}.png" width="100" height="100" class="rounded-10 d-inline-block align-top mb-1" alt="{{this}}">
            <h5 class="card-title">
              {{#ifCond this "COB"}}
              College of Business
              {{/ifCond}}{{#ifCond this "CLA"}}
              College of Liberal Arts
              {{/ifCond}}{{#ifCond this "COE"}}
              College of Engineering
              {{/ifCond}}{{#ifCond this "COS"}}
              College of Science
              {{/ifCond}}{{#ifCond this "CCS"}}
              College of Computer Studies
              {{/ifCond}}{{#ifCond this "CED"}}
              College of Education
              {{/ifCond}}{{#ifCond this "SOE"}}
              School of Economics
              {{/ifCond}}
              </h5>
            <a href="/colleges/{{this}}" class="card-link">View {{this}} page</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <p>No colleges yet</p>
{{/if}}