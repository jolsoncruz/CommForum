<!-- DELETE COLLEGE -->
<div class="modal fade" id="modalDeleteCollege" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
   aria-hidden="true">
   <div class="modal-dialog" role="document">
      <div class="modal-content">
         <div class="modal-header text-center">
            <h4 class="modal-title w-100 font-weight-bold">Delete College</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
         </div>
         <div class="modal-body mx-3">
            <div class="survey-head text-center">
               <p><span class="font-weight-bold">Warning: Deleting a college cannot be undone</span>
               </p>
            </div>
         </div>
         <input type="hidden" id="modalDeleteCollegeRef" name="modalDeleteCollegeRef">
         <div class="modal-body mx-3">
            <h5 class = "text-center"><span class="font-weight-bold">Are you sure you want to delete this college?</span></h5>
         </div>
         <div class="modal-footer d-flex justify-content-center">
            <button  class="btn btn-primary btn-sm text-white" id ="deleteCollege">Delete College</button>
         </div>
      </div>
   </div>
</div>
<!-- End of Modals -->
<div class="row mt-sm-4 mt-md-0">
   <div class="col-sm-12 col-md-8">
      <h3>College Information</h3>
      <table class="table table-hover table-light mb-5">
         <thead class="thead-green">
            <tr class="text-center">
               <th scope="col">College</th>
               <th scope="col">Full Name</th>
               <th scope="col">No. of Professors</th>
               <th scope="col">Action</th>
            </tr>
         </thead>
         <tbody>
            {{#each data}}
            <tr class="text-center">
               <td>{{this.shortName}}</td>
               <td>{{this.longName}}</td>
               <td>{{this.count}}</td>
               <td>
                  <!-- CALLING MODALS -->
                  <button class="btn btn-primary btn-sm text-white dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Action</button>
                  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                     <!--
                        <button class="dropdown-item" class="text-center" data-toggle="modal" id= "modalEditCollege" data-target="#modaleditcollege" 
                          data-funct= "editCollege"
                           data-id= "{{this._id}}"
                           data-short = "{{this.shortName}}"
                           data-long = "{{this.longName}}"
                           data-logo = "{{this.logo}}"
                           >Update College</button>
                           -->
                     <button class="dropdown-item" class="text-center" data-toggle="modal" data-target="#modalDeleteCollege"
                        data-funct= "deleteCollege"
                        data-id= "{{this._id}}"
                      >Delete College</button>
                     <a class="dropdown-item" class="text-center" href="/colleges/{{this.shortName}}">Go to College</a>
                  </div>
                  <!-- -->
               </td>
            </tr>
            {{/each}}
         </tbody>
         </nav>
      </table>
   </div>
   <!-- Add College -->
   <div class="col-sm-12 col-md-4">
    <h3 class="text-center" id="addCollege">Add College</h3>
    <div class="card mb-4">
      <div class="card-body">
        <div class="text-center">
          <img src="/assets/logo_box_green.jpg" width="100" class="rounded-10 d-inline-block align-top mt-2 mb-3" alt="DLSU Community Forum">
        </div>

        <form action="/addCollege" method="POST" enctype="multipart/form-data">
          <div class="form-group row">
            <label for="addShortName" class="col-sm-5 col-form-label">Short Name</label>
            <input type="text" name="shortName" class="form-control col-sm-6" placeholder="COL" required></input>
          </div>
          <div class="form-group row">
            <label for="addLongName" class="col-sm-5 col-form-label">Long Name</label>
            <input type="text" name="longName" class="form-control col-sm-6" placeholder="College of Law" required></input>
          </div>
          <div class="form-group row">
            <label for="addLogo" class="col-sm-5 col-form-label">College Logo</label>
            <div class="input-group col-sm-6 custom-file">
              <input type="file" class="custom-file-input" id="collegeLogo" name= "collegeLogo" accept="image/png, image/jpg" required></input>
              <label class="custom-file-label" for="collegeLogo">Logo</label>
            </div>
          </div>
          <div class="form-group row">
            <label for="addTelNum" class="col-sm-5 col-form-label">Tel. Number</label>
            <input type="text" name="telNum" class="form-control col-sm-6" placeholder="(632) 524-4611" required></input>
          </div>
          <div class="form-group row">
            <label for="addLongName" class="col-sm-5 col-form-label">Fax Number</label>
            <input type="text" name="faxNum" class="form-control col-sm-6" placeholder="(632) 302-3899" required></input>
          </div>
          <div class="form-group row">
            <label for="addAboutUs" class="col-sm-5 col-form-label">About Us</label>
            <textarea class="form-control col-sm-6" id="aboutUs" name="aboutUs" rows="8" required></textarea>
          </div>
          <div class="text-center">
            <button type="submit" class="btn btn-primary mt-0 mb-2">Add College</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
